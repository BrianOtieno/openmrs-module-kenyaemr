<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Program ===================== -->

	<bean id="kenyaemr.covid.program" class="org.openmrs.module.kenyacore.program.ProgramDescriptor">
		<property name="targetUuid" value="e7ee7548-6958-4361-bed9-ee2614423947" />
		<property name="eligibilityCalculation" value="org.openmrs.module.kenyaemr.calculation.library.hiv.EligibleForHivProgramCalculation" />
		<property name="defaultEnrollmentForm" ref="kenyaemr.covid.form.enrollment" />
		<property name="defaultCompletionForm" ref="kenyaemr.covid.form.completion" />
		<property name="visitForms" >
			<set>
			</set>
		</property>
	
		<property name="reports">
			<set>

			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kenyaemr:program/covid/covidInitiationSummary" />
				<entry key="care-panel" value="kenyaemr:program/covid/covidCarePanel" />
				<entry key="completion-summary" value="kenyaemr:program/covid/covidOutcomeSummary" />
			</map>
		</property>
		<property name="order" value="300" />
	</bean>

	<bean id="kenyaemr.covid.quarantine" class="org.openmrs.module.kenyacore.program.ProgramDescriptor">
		<property name="targetUuid" value="9a5d555e-739a-11ea-bc55-0242ac130003" />
		<property name="eligibilityCalculation" value="org.openmrs.module.kenyaemr.calculation.library.hiv.EligibleForHivProgramCalculation" />
		<property name="defaultEnrollmentForm" ref="kenyaemr.covid.quarantine.form.enrollment" />
		<property name="defaultCompletionForm" ref="kenyaemr.covid.quarantine.form.completion" />
		<property name="visitForms" >
			<set>
			</set>
		</property>

		<property name="reports">
			<set>
				<ref bean="kenyaemr.covid.report.enrolledInCovidQuarantine" />
				<ref bean="kenyaemr.covid.report.quarantineLineList" />
				<ref bean="kenyaemr.covid.report.discontinuedOnQuarantine" />

			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kenyaemr:program/covidQuarantine/quarantineAdmissionSummary" />
				<entry key="care-panel" value="kenyaemr:program/covid/covidCarePanel" />
				<entry key="completion-summary" value="kenyaemr:program/covidQuarantine/outcomeSummary" />
			</map>
		</property>
		<property name="order" value="350" />
	</bean>

