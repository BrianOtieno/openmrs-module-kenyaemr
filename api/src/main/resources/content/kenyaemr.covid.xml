			</set>
		</property>
		<property name="icon" value="kenyaui:forms/generic.png" />
		<property name="htmlform" value="kenyaemr:covid/covidClinicalForm.html" />
		<property name="order" value="201005" />
	</bean>



	<!--Covid Completion -->
	<bean id="kenyaemr.covid.form.completion" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="8f4e3e83-c597-47ad-8999-b788e8255d20" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.registration" />
				<ref bean="kenyaemr.app.clinician" />
				<ref bean="kenyaemr.app.surveillance" />
			</set>
		</property>
		<property name="icon" value="kenyaui:forms/completion.png" />
		<property name="htmlform" value="kenyaemr:covid/covidOutcome.html" />
	</bean>

	<bean id="kenyaemr.covid.quarantine.form.enrollment" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="9a5d57b6-739a-11ea-bc55-0242ac130003" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.registration" />
				<ref bean="kenyaemr.app.clinician" />
				<ref bean="kenyaemr.app.surveillance" />
			</set>
		</property>
		<property name="icon" value="kenyaui:forms/generic.png" />
		<property name="htmlform" value="kenyaemr:covid/covidQuarantineEnrollment.html" />
		<property name="order" value="201005" />
	</bean>



	<!--Covid Completion -->
	<bean id="kenyaemr.covid.quarantine.form.completion" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="9a5d58c4-739a-11ea-bc55-0242ac130003" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.registration" />
				<ref bean="kenyaemr.app.clinician" />
				<ref bean="kenyaemr.app.surveillance" />
			</set>
		</property>
		<property name="icon" value="kenyaui:forms/completion.png" />
		<property name="htmlform" value="kenyaemr:covid/covidQuarantineOutcome.html" />
	</bean>

	<!-- ===================== Reports ===================== -->



	<bean id="kenyaemr.covid.report.quarantineLineList" class="org.openmrs.module.kenyacore.report.HybridReportDescriptor">
		<property name="targetUuid" value="449ce6ed-15c0-4a60-8952-315e94ded989" />
		<property name="name" value="Line list of people in quarantine during a period" />
		<property name="description" value="A list of people in quarantine filtered by date" />
		<property name="apps"><set><ref bean="kenyaemr.app.reports" /></set></property>
	</bean>
	<bean id="kenyaemr.covid.report.enrolledInCovidQuarantine" class="org.openmrs.module.kenyacore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="0131bf0a-142d-4d9a-a9eb-c919c24b488b" />
		<property name="name" value="Individuals currently in Quarantine" />
		<property name="description" value="Individuals currently in Quarantine" />
		<property name="calculation" value="org.openmrs.module.kenyaemr.calculation.library.covid.OnCovidQuarantineCalculation" />
		<property name="apps"><set><ref bean="kenyaemr.app.reports" /></set></property>
	</bean>
	<bean id="kenyaemr.covid.report.discontinuedOnQuarantine" class="org.openmrs.module.kenyacore.report.HybridReportDescriptor">
		<property name="targetUuid" value="fa6c0f76-90f9-4246-89b2-29330e70b90a" />
		<property name="name" value="Individuals discontinued from Quarantine" />
		<property name="description" value="Individuals discontinued from Quarantine" />
		<property name="apps"><set><ref bean="kenyaemr.app.reports" /></set></property>
	</bean>
</beans>